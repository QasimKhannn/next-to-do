generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model List {
  id          String   @id @default(cuid())
  name        String
  date        DateTime
  time        String?
  description String
  finished    Boolean? @default(false)
}
